{
  "name": "autorest",
  "displayName": "AutoRest",
  "description": "AutoRest/Swagger Language Service",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "0.12.2",
  "publisher": "ms-vscode",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Linters",
    "Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:yaml",
    "onLanguage:markdown"
  ],
  "preview": true,
  "homepage": "https://github.com/azure/autorest/blob/master/README.md",
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#ACD1EC",
    "theme": "light"
  },
  "bugs": {
    "url": "https://github.com/Azure/autorest/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azure/autorest"
  },
  "main": "./client/client",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "AutoRest Configuration",
      "properties": {
        "autorest.minimumAutoRestVersion": {
          "type": "string",
          "default": "1.0.1-20170407-1100",
          "description": "forces the minimum version of the autorest-core to be installed."
        },
        "autorest.runtimeId": {
          "type": "string",
          "default": null,
          "description": "forces the autorest-core to install a specific dotnet runtime."
        },
        "autorest.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "autorest.debug": {
          "type": "boolean",
          "default": false,
          "description": "Shows AutoRest DEBUG messages in the console."
        },
        "autorest.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Shows AutoRest VERBOSE messages in the console."
        },
        "autorest.information": {
          "type": "boolean",
          "default": true,
          "description": "Shows AutoRest INFORMATION messages in the console."
        },
        "autorest.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the AutoRest Language Service"
        }
      }
    },
    "snippets": [{
      "language": "json",
      "path": "./snippets/swagger.json"
    }]
  },
  "scripts": {
    "prepublish": "npm run update-vscode compile",
    "watch": "node_modules/.bin/tsc -watch -p .",
    "compile": "node_modules/.bin/tsc -p .",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "@types/pify": "0.0.28",
    "@types/vinyl": "^2.0.0",
    "@types/vinyl-fs": "^2.4.2",
    "mocha": "^3.2.0",
    "mocha-typescript": "^1.0.22",
    "typescript": "^2.3.0-dev.20170314",
    "vscode": "^1.1.0",
    "vscode-languageserver": "^3.2.0"
  },
  "dependencies": {
    "autorest": "*",
    "file-url": "^2.0.2",
    "get-uri": "^2.0.0",
    "linq-es2015": "^2.4.13",
    "pify": "^2.3.0",
    "semver": "^5.3.0",
    "strip-bom": "^3.0.0",
    "urijs": "^1.18.9",
    "vscode-languageclient": "^3.1.0",
    "vscode-languageserver": "^3.2.0"
  }
}
