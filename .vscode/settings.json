{
  "files.exclude": {
    "node_modules/**": true,
    "client/**/*.js": true,
    "server/**/*.js": true,
    "lib/**/*.js": true,
    "test/**/*.js": true,
    "**/*.js.map": true,
    "**/*.d.ts": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "files.associations": {
    "*.iced": "coffeescript"
  },
  	"typescript.tsdk": "./node_modules/typescript/lib"
}