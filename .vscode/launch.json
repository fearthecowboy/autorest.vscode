{
  "version": "0.2.0",
    "compounds": [
    {
      "name": "Both",
      "configurations": [
        "Client Side",
        "Server Side"
      ]
    }
  ],
  "configurations": [
        {
      "name": "Server Side",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "sourceMaps": true,
      "protocol": "legacy"
    },
    {
      "name": "Client Side",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "stopOnEntry": false,
      "sourceMaps": true
    },
    {
      "name": "Launch Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/src/vscode-autorest",
        "--extensionTestsPath=${workspaceRoot}/src/vscode-autorest"
      ],
      "stopOnEntry": false,
      "sourceMaps": true
    }
  ]
}